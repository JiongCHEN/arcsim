    "disable": ["remeshing", "strainlimiting"], 
    //"disable": ["remeshing"],
    // List of modules to disable. choose any or all of: "proximity" "physics", "strainlimiting", "collision", "remeshing", "separation"

    "magic": {
    	"repulsion_thickness": 5e-3, 
    	"collision_stiffness": 1e6
